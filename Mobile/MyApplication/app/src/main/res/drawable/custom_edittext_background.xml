<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Rectangle -->
    <item android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background color (e.g., white) -->
            <stroke android:width="1dp" android:color="#000000" /> <!-- Border color (e.g., black) -->
        </shape>
    </item>
    <!-- EditText Text Field -->
    <item android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Match the background color -->
        </shape>
    </item>
</layer-list>