<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditServiceActivity"
    android:background="#279EFF">


    <TextView
        android:id="@+id/tvIdLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etId"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="none"
    android:focusable="false"
    app:layout_constraintStart_toEndOf="@+id/tvIdLabel"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0" />


    <TextView
        android:id="@+id/tvNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etId"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etName"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvNameLabel"
        app:layout_constraintTop_toBottomOf="@id/etId"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvProviderLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Provider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etProvider"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvProviderLabel"
        app:layout_constraintTop_toBottomOf="@+id/etName"
        app:layout_constraintEnd_toEndOf="parent" />


    <TextView
        android:id="@+id/tvLocationLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etProvider"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etLocation"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvLocationLabel"
        app:layout_constraintTop_toBottomOf="@+id/etProvider"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvRadiusLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Radius"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etLocation"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etRadius"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvRadiusLabel"
        app:layout_constraintTop_toBottomOf="@+id/etLocation"
        app:layout_constraintEnd_toEndOf="parent" />
    <!-- Repeat the same pattern for other fields (Location, Radius, Phone, Price) -->

    <TextView
        android:id="@+id/tvPhoneLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etRadius"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etPhone"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvPhoneLabel"
        app:layout_constraintTop_toBottomOf="@+id/etRadius"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvPriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhone"
        style="@style/CustomText.StrokeText"/>

    <EditText
        android:id="@+id/etPrice"
        style="@style/EditText"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/tvPriceLabel"
        app:layout_constraintTop_toBottomOf="@+id/etPhone"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/ivImageSave"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginBottom="252dp"
        android:src="@drawable/save2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivImageDelete"
        android:layout_width="97dp"
        android:layout_height="87dp"
        android:layout_marginBottom="252dp"
        android:src="@drawable/delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.764"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
